<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.portrait.OperationAndUseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_60">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent">
            <TextView
                android:text="总体："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_totality"
                android:text="总体："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent">
            <TextView
                android:text="分系统："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_subsystem"
                android:text="分系统："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent">
            <TextView
                android:text="设备："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_facility"
                android:text="设备："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/padding_0"
            android:layout_height="match_parent">
            <TextView
                android:text="关键字："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="序号"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/color_D0D0D0"
            android:layout_width="@dimen/padding_1"
            android:layout_height="@dimen/padding_30"/>

        <TextView
            android:paddingLeft="@dimen/padding_20"
            android:layout_weight="5"
            android:text="操作名称"
            android:layout_width="@dimen/padding_0"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:background="@color/color_D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>

    <ListView
        android:id="@+id/lv_fragment_operation_and_use"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>